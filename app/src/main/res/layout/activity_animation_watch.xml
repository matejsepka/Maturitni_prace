<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.matej.sepka.bestappever.activity.AnimationWatchActivity"
    android:background="@drawable/volleyball_court_background">

    <Button
        android:id="@+id/startBtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/player_one_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/player_one"/>

    <ImageView
        android:id="@+id/player_two_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/player_two"/>

    <ImageView
        android:id="@+id/ball_one_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/volleyball_icon"/>

    <ImageView
        android:id="@+id/player_three_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/player_three"/>

    <ImageView
        android:id="@+id/player_four_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/player_four"/>

</RelativeLayout>
